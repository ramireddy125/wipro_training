package com.day_10;
import java.util.*;

class Patient {
    private String id;
    private String name;
    private String disease;

    public Patient(String id, String name, String disease) {
        this.id = id;
        this.name = name;
        this.disease = disease;
    }

    public String getId() {
        return id;
    }

    public String getName() {
        return name;
    }

    public String getDisease() {
        return disease;
    }

    public void setDisease(String disease) {
        this.disease = disease;
    }

    public String toString() {
        return "ID: " + id + ", Name: " + name + ", Disease: " + disease;
    }
}

public class HashMap_Ex {

    public static void main(String[] args) {
        HashMap<String, Patient> patientMap = new HashMap<>();

        patientMap.put("P101", new Patient("P101", "Venkat", "Fever"));
        patientMap.put("P102", new Patient("P102", "Ravi", "Cold"));
        patientMap.put("P103", new Patient("P103", "John", "Malaria"));
        patientMap.put("P104", new Patient("P104", "Sara", "Diabetes"));

        System.out.println("Retrieve patient P103:");
        System.out.println(patientMap.get("P103"));

        System.out.println("\n Does P103 exist?");
        System.out.println(patientMap.containsKey("P103")); 

        System.out.println("\n Removing P103:");
        System.out.println(patientMap.remove("P103"));

        System.out.println("\n Retrieve P103 after deletion:");
        System.out.println(patientMap.get("P103")); 
        
        System.out.println("\n Does P103 exist?");
        System.out.println(patientMap.containsKey("P103")); 

        System.out.println("\n All Patient IDs:");
        System.out.println(patientMap.keySet());

        System.out.println("\nAll Patient Entries:");
        for (Map.Entry<String, Patient> entry : patientMap.entrySet()) {
            System.out.println(entry.getKey() + " => " + entry.getValue());
        }
    }
}
