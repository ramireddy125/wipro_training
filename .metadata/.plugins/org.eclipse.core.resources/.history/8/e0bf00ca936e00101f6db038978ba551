package com.day_12;
import java.io.*;

import java.io.Serializable;

class Patient implements Serializable {
    String id;
    String name;
    String disease;
    int age;

    public Patient(String id, String name, String disease, int age) {
        this.id = id;
        this.name = name;
        this.disease = disease;
        this.age = age;
    }

    public String toString() {
        return "Patient ID: " + id + ", Name: " + name + ", Disease: " + disease + ", Age: " + age;
    }
}
public class Serilization_Ex {

	public static void main(String[] args) {
		Patient p1 = new Patient("P101", "Venkat", "Fever", 24);
		
		try (ObjectOutputStream out = new ObjectOutputStream(new FileOutputStream("patient.ser"))) {
            out.writeObject(p1);
            System.out.println("Patient saved");
        } catch (IOException e) {
            System.out.println(e.getMessage());
        }
		

	}

}
