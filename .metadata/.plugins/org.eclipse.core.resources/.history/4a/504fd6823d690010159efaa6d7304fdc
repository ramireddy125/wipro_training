package com.day_5;

class Emp {
    String name;
    double salary;

    // Implicit constructor (not written) is available by default
    // But if we add any constructor, implicit is no longer available
    // So weâ€™ll write it explicitly
    Emp() {
        name = "Default";
        salary = 0.0;
    }

    // Explicit constructor
    Emp(String name, double salary) {
        this.name = name;
        this.salary = salary;
    }

    // Copy constructor
    Emp(Emp e) {
        this.name = e.name;
        this.salary = e.salary;
    }
}

public class ImpConstructor {
    public static void main(String[] args) {
        // Using explicit constructor
        Emp emp1 = new Emp("Venkat", 40000);

        // Using copy constructor
        Emp emp2 = new Emp(emp1);

        // Using implicit (default) constructor
        Emp emp3 = new Emp();

        // Display
        System.out.println("Employee 1: " + emp1.name + ", " + emp1.salary);
        System.out.println("Employee 2 (copy): " + emp2.name + ", " + emp2.salary);
        System.out.println("Employee 3 (default): " + emp3.name + ", " + emp3.salary);
    }
}
